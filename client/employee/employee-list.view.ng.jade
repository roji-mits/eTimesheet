.employee-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Employe
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a employee
      md-input-container
        label Name
        input(ng-model='newEmployee.name', placeholder='Name')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    ul
      li(dir-paginate='employee in employee | itemsPerPage: perPage', total-items='employeeCount.count',  current-page='page')
        p 
          a(href='/employee/{{employee._id}}') {{ employee.name }}
          button(ng-click='remove(employee)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of employee: {{employeeCount.count}}
  span(flex='')