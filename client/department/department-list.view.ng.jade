.department-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Department
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a department
      md-input-container
        label Name
        input(ng-model='newDepartment.name', placeholder='Name')
      md-input-container
        label Description
        textarea(ng-model='newDepartment.description', placeholder='Description')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending
    
    div(class="CSSTableGenerator")
      table
        tr
          th S.N
          th Name
          th Description
          th Operation
        tr(dir-paginate='department in department | itemsPerPage: perPage', total-items='departmentCount.count',  current-page='page')
          td {{$index+1}}
          td {{department.name}}
          td {{department.description}}
          td 
            a(href='/department/{{department._id}}') 
              i.fa.fa-edit
            button(ng-click='remove(department._id)')
              i.fa.fa-trash-o
    //- ul
    //-   li(dir-paginate='department in department | itemsPerPage: perPage', total-items='departmentCount.count',  current-page='page')
    //-     p 
    //-       a(href='/department/{{department._id}}') {{ department.name }}
    //-       {{ }} {{  department.description}}
    //-       button(ng-click='remove(department._id)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    a(ng-href='/admin-dashboard') &larr;

    p Total number of department: {{departmentCount.count}}
  span(flex='')