.employeemanagement(layout='row')

  span(flex='')  
  div(layout='column', layout-align='center center')
    h1 User Management
    div(style="width:800px")
      .md-whiteframe(layout='column', flex='50')
        div(layout='row', layout-align='start center')
          h2 Add Employee
        .md-warn(ng-show='error')
          small {{ error }}
        div(margin-bottom="100px")
          form(layout='column' id="registerForm" name='form')
            div(layout='column', layout-align='start start')
                table
                  tr
                    td
                      lable Name
                    td
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label First Name
                        input(type='text', ng-model='profile[0].firstname', aria-label='First Name', value='firstname')
                    td
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Middle Name
                        input(type='text', ng-model='profile[0].middlename', aria-label='Middle Name')
                    td
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Last Name
                        input(type='text', ng-model='profile[0].lastname', aria-label='Last Name')
                  tr
                    td
                      label Contact
                    td(colspan='2') 
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Moblie Number
                        input(type='text', ng-model='profile[0].mobile', aria-label='Mobile Number')
                    td
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Home Number
                        textarea(type='text', ng-model='profile[0].home', aria-label='Home Number')
                  tr
                    td
                      lable Address
                    td(colspan='3')
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Address
                        textarea(type='text', ng-model='profile[0].address', aria-label='Address')
                  tr
                    td
                      label Email
                    td(colspan='2')
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Primary Email
                        input(type='text', ng-model='email', aria-label='Primary Email')
                    td
                      md-input-container
                        md-icon(md-svg-icon='content:ic_mail_24px')
                        label Secondary Email
                        input(type='text', ng-model='profile[0].secondaryemail', aria-label='Secondary Email')
                  tr
                    td
                      label Password
                    td(colspan='3')
                      md-input-container
                        md-icon(md-svg-icon='action:ic_lock_open_24px')
                        label Password
                        input(type='password', ng-model='password', aria-label='password')
            div(layout='row', layout-align='center center')
              md-button.md-raised.md-primary(ng-click='register()')
                | Create Account
    div(class='CSSTableGenerator', margin-bottom='30px')  
      table
        th S.N
        th 
          a(href='#', ng-click="sortType = 'name'; sortReverse = !sortReverse") Name
        th 
          a(href='#', ng-click="sortType = 'name'; sortReverse = !sortReverse") Designation
        th 
          a(href='#', ng-click="sortType = 'name'; sortReverse = !sortReverse") Department
        th 
          a(href='#', ng-click="sortType = 'contact'; sortReverse = !sortReverse") Address
        th 
          a(href='#', ng-click="sortType = 'address'; sortReverse = !sortReverse") Contact
        th 
          a(href='#', ng-click="sortType = 'email'; sortReverse = !sortReverse") Email Address
        th 
          a(href='#', ng-click="sortType = 'secondaryemail'; sortReverse = !sortReverse") SecondaryEmail Address
        th Operation
        tr(dir-paginate='user in users | orderBy:sortType:sortReverse | itemsPerPage: perPage', total-items='usersCount.count',  current-page='page')
          td{{$index+1}}
          td{{user.profile[0].firstname }} {{user.profile[0].middlename}} {{user.profile[0].lastname}}
          td {{user.profile[0].designation}}
          td {{user.profile[0].department}}
          td {{user.profile[0].address}}
          td {{user.profile[0].mobile}}{{}} {{user.profile[0].home}}
          td {{user.emails[0].address}}
          td {{user.profile[0].secondaryemail}}
          td 
            a(href='/manageemployeeEdit/{{user._id}}')
              i.fa.fa-pencil-square-o
                md-tooltip(md-direction='right') Edit
            a(href='/reset-password/{{user._id}}')
              i.fa.fa-unlock
                md-tooltip(md-direction='right') Reset Password
            button(ng-click='verify(user._id)' ng-if='!user.emails[0].verified')
              i.fa.fa-user-times
                md-tooltip(md-direction='right') Verify User
            button(ng-click='deactive(user._id)' ng-if='user.profile[0].isActive') Deactivate
              md-tooltip(md-direction='right') Deactivate User
            button(ng-click='active(user._id)' ng-if='!user.profile[0].isActive') Activate
              md-tooltip(md-direction='right') Activate User

            button(ng-click='remove(user._id)') 
              i.fa.fa-trash-o
                md-tooltip(md-direction='right') Delete Users
    a(href='/admin-dashboard') Back


  span(flex='')
        
