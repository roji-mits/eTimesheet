.designation-list(layout='row')
  span(flex='')
  div(layout='column')
    h1 Designation
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a designation
      md-input-container
        label Name
        input(ng-model='newDesignation.name', placeholder='Name')
      md-input-container
        label Description
        input(ng-model='newDesignation.description', placeholder='description')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', placeholder='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    ul
      li(dir-paginate='designation in designation | itemsPerPage: perPage', total-items='designationCount.count',  current-page='page')
        p 
          a(href='/designation/{{designation._id}}') {{ designation.name }}
          {{ }}{{}}{{designation.description}}
          button(ng-click='delete(designation._id)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of designation: {{designationCount.count}}
  span(flex='')