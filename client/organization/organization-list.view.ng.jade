.organization-list(layout='row')
  span(flex='')
  div(layout='column' layout-align='space-between center' )
    h1 Organization
    form.md-whiteframe-z1(ng-submit='save()', name='form', novalidate='', layout-padding='')
      p Add a organization
      md-input-container
        label Name
        input(ng-model='newOrganization.name', arial-label='Name')
      md-input-container
        label Description
        input(ng-model='newOrganization.description', arial-label='description')
      input.md-button(type='submit', value='Add')
    div(layout='row', layout-padding='')
      md-input-container(flex='65')
        label Search
        input(type='search', ng-model='search', arial-label='Search')
      md-select(ng-model='orderProperty', flex='35')
        md-option(value='1') Ascending
        md-option(value='-1') Descending

    div(class='CSSTableGenerator')
      table
        tr
          th S.N
          th Name
          th Description
          th Operation
        tr(dir-paginate='organization in organization | itemsPerPage: perPage', total-items='organizationCount.count',  current-page='page')
          td {{$index+1}}  
          td {{organization.name}}
          td {{organization.description}}
          td
            a(href='/organization/{{organization._id}}')
              i.fa.fa-edit
            button(ng-click='remove(organization._id)')
              i.fa.fa-trash-o

    //- ul
    //-   li(dir-paginate='organization in organization | itemsPerPage: perPage', total-items='organizationCount.count',  current-page='page')
    //-     p 
    //-       a(href='/organization/{{organization._id}}') {{ organization.name }}
    //-       {{  }}{{organization.description}}
    //-       button(ng-click='remove(organization._id)') &times;
    dir-pagination-controls.md-accent(on-page-change='pageChanged(newPageNumber)')

    p Total number of organization: {{organizationCount.count}}
    a(ng-href='/admin-dashboard') Back
  span(flex='')